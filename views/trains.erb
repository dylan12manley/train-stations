  <h3>Available Trains</h3>

  <% if @trains.any? %>
  <ul>
    <% @trains.sort_by(&:name).each do |train| %>
    <li><a href="/trains/<%= train.id %>"><%= train.name %></a></li>
    <% end %>
  </ul>
  <% else %>
  <p>There are currently no trains to display.</p>
  <% end %>

  <a href="/trains/new">Add a New Train</a>
  <form action="/trains/search/" method="get">
    <div class="form-group">
      <label for="searched">Search</label>
      <input id="searched" name="searched" class="form-control" type="text">
    </div>
    <button type="submit">Go!</button>
  </form>

  <a href="/trains/new">Add a New Train</a>
